@page
@inherits EasyAbp.GiftCardManagement.Web.Pages.GiftCardManagementPage
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EasyAbp.GiftCardManagement.Web.Pages.GiftCardManagement.GiftCards.GiftCard.CreateBatchModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="CreateBatchModel" data-ajaxForm="true" asp-page="CreateBatchModal">
    <abp-modal>
        <abp-modal-header title="@L["CreateGiftCardInBatch"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>