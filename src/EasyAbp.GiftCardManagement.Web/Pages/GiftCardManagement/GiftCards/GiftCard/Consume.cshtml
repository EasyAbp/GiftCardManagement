@page
@using EasyAbp.GiftCardManagement.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model EasyAbp.GiftCardManagement.Web.Pages.GiftCardManagement.GiftCards.GiftCard.ConsumeModel
@inject IHtmlLocalizer<GiftCardManagementResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Menu:GiftCardConsumption"].Value;
    PageLayout.Content.MenuItemName = "EasyAbpGiftCardManagementGiftCardConsumption";
}

@section scripts
{
    <abp-script src="/Pages/GiftCardManagement/GiftCards/GiftCard/consume.js" />
}
@section styles
{
    <abp-style src="/Pages/GiftCardManagement/GiftCards/GiftCard/consume.css"/>
}

<abp-card>
    <abp-card-body>
        <abp-dynamic-form abp-model="ConsumeGiftCard" data-ajaxForm="true" asp-page="Consume">
            <abp-form-content />
            <abp-modal-footer buttons="@(AbpModalButtons.Save)"></abp-modal-footer>
        </abp-dynamic-form>
    </abp-card-body>
</abp-card>