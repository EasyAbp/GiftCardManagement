@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MyProject.Localization
@using MyProject.Web.Pages.Gifts.Gift
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model IndexModel
@inject IHtmlLocalizer<MyProjectResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Gift"].Value;
    PageLayout.Content.MenuItemName = "Gift";
}

@section scripts
{
    <abp-script src="/Pages/Gifts/Gift/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Gifts/Gift/index.css"/>
}
@section content_toolbar
{
    <abp-button id="NewGiftButton"
                text="@L["CreateGift"].Value"
                icon="plus"
                size="Small"
                button-type="Primary" />
}

<abp-card>
    <abp-card-body>
        <abp-table striped-rows="true" id="GiftTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["GiftName"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>