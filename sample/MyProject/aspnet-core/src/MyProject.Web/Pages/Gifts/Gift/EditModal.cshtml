@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MyProject.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IHtmlLocalizer<MyProjectResource> L
@model MyProject.Web.Pages.Gifts.Gift.EditModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Gift" data-ajaxForm="true" asp-page="EditModal">
    <abp-modal>
        <abp-modal-header title="@L["EditGift"].Value"></abp-modal-header>
        <abp-modal-body>
            <input type="hidden" asp-for="Id"/>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>